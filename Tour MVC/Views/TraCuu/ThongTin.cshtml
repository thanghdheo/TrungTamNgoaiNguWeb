@model Tour_MVC.Models.NguoiDung
@{
    ViewData["Title"] = "Thông tin người dùng";
}
<div>
    <h4>@Html.DisplayFor(model => model.HoNguoiDung)  @Html.DisplayFor(model => model.TenNguoiDung)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Họ và tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoNguoiDung)  @Html.DisplayFor(model => model.TenNguoiDung)
        </dd>
        <dt class = "col-sm-2">
            Giới tính
        </dt>
         @{
            if (Model.GioiTinh)
            {
                <dd class = "col-sm-10">
                    Nam
                </dd>
            }
            else
            {
                <dd class = "col-sm-10">
                    Nữ
                </dd>
            }

        }
        <dt class = "col-sm-2">
           Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
            Nơi sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoiSinh)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="PhongThi" asp-action="Index">Quay lại</a>
</div>
